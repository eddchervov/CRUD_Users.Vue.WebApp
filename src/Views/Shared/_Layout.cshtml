<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CRUD_Users</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/dev-root/bootstrap/dist/css/bootstrap.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/dev-root/font-awesome/css/font-awesome.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/plugin.min.css" asp-append-version="true"/>
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>

    @RenderSection("Styles", required: false)
</head>
<body>
    <div id="spin"></div>

    <div class="container body-content">

        <div id="load-box" class="row">

            <div class="col-12">
                <div class="load-box">
                    <p>Загрузка...</p>
                </div>
            </div>
        </div>

        @RenderBody()

        <hr />
        <footer>
            <p>&copy; ASP CORE | VUE.JS - @DateTime.Now.Year</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/dev-root/jquery/dist/jquery.min.js" asp-append-version="true"></script>
        <script src="~/dev-root/moment/min/moment-with-locales.min.js" asp-append-version="true"></script>
        <script src="~/dev-root/vue/dist/vue.min.js" asp-append-version="true"></script>
        <script src="~/dev-root/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
        <script src="~/dev-root/bootbox/dist/bootbox.all.min.js" asp-append-version="true"></script>
        <script src="~/dev-root/vuejs-paginate/dist/index.js" asp-append-version="true"></script>
        <script src="~/js/plugins/ed-loader.js" asp-append-version="true"></script>
        <script src="~/js/plugins/ed-bootbox.js" asp-append-version="true"></script>
        <script src="~/js/vue/vue-prototype.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/plugins/plugin.min.js" asp-append-version="true"></script>
        <script src="~/js/plugins/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
